{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Debug",
      "Microsoft.Hosting.Lifetime": "Debug"
    }
  },
  "https_port": 1141,
  "Urls": "http://localhost:1140;https://localhost:1141",
  "ManagementPort": "1141",
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "LoginServiceRoute",
        "ClusterId": "clusterLoginService",
        "Match": {
          "Path": "/loginservice/{*remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/loginservice"
          }
        ]
      },
      {
        "RouteId": "ResourceServiceRoute",
        "ClusterId": "clusterResourceService",
        "Match": {
          "Path": "/resourceservice/{*remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/resourceservice"
          }
        ]
      },
      {
        "RouteId": "route1",
        "ClusterId": "cluster1",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    ],
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "cluster1/destination1": {
            "Address": "https://example.com/"
          }
        }
      },
      "clusterLoginService": {
        "Destinations": {
          "clusterLoginService/destination1": {
            "Address": "https://localhost:1116/"
          }
        }
      },
      "clusterResourceService": {
        "Destinations": {
          "clusterResourceService1/destination1": {
            "Address": "https://localhost:5002/"
          }
        }
      }
    }
  }
}
